                                            <artifact>
                                                <path>{{jpackageDir}}/JavaFX-Skeleton.dmg</path>
                                                <platform>osx-x86_64</platform>
                                            </artifact>
                                        </artifacts>
                                    </javafx-skeleton-installer>
                                </distributions>
                            </jreleaser>
                        </configuration>
                        <executions>
                            <execution>
                                <phase>package</phase>
                                <goals>
                                    <goal>assemble</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
